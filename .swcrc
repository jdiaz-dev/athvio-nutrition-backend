{
  "$schema": "https://swc.rs/schema.json",
  "sourceMaps": true,
  "module": { "type": "commonjs" },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": { "legacyDecorator": true, "decoratorMetadata": true },
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "minify": false
}
  